<!--
***Reply***
    Reply to message
-->

@model rungreenlake.Models.ViewModels.MailboxViewModel

@{
    ViewData["Title"] = "Reply";
}

<h1>Reply</h1>
<hr />


    <h4>Replying to message:</h4>

    <div class="form-group row">
        <div class="col-sm-2"><label>Name: </label></div>
        <div class="col-sm-2">
            <text><b>@Model.ReceiverUser.FirstName @Model.ReceiverUser.LastName</b></text>
        </div>
        <div class="col-sm-2"><label>Profile ID: </label></div>
        <div class="col-sm-2">
            <text><b>@Model.MessageReplyingTo.MsgSenderID</b></text>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Header: </label></div>
        <div class="col-sm-6">
            <textarea class="form-control" style="height:200px;resize:none" readonly>@Model.MessageReplyingTo.MsgHeader</textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Body: </label></div>
        <div class="col-sm-6">
            <textarea class="form-control" style="resize:none" readonly>@Model.MessageReplyingTo.MsgBody</textarea>
        </div>
    </div>
    <h4>New Message:</h4>
    <div>

        <form asp-action="Reply">
            <input type="hidden" asp-for="MsgID" value="@Model.MessageReplyingTo.MessageID" />
            <div class="form-group row">
                <div class="col-sm-2"><label>Header:</label></div>
                <div class="col-sm-6">
                    <input asp-for="Header" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <span asp-validation-for="Header" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label>Body:</label></div>
                <div class="col-sm-6">
                    <textarea asp-for="Body" class="form-control" style="height:200px;"></textarea>
                </div>
                <div class="col-sm-6">
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </div>
        </form>


    </div>
<div>
    <a asp-action="Mail">Back to List</a>
</div>



